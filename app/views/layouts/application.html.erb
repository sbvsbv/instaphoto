<!DOCTYPE html>
<html>
  <head>
    <title>Instaphoto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <div class="container-fluid container-background">
      <div class="container">
        <ul class="nav">
          <li class="nav-item nav-link">
            <%= link_to "Instaphoto", root_path, class: 'nav-landing'%>
          </li>
          <li class="nav-item nav-link">
            <%= link_to "О проекте",   pages_about_path, class: 'nav-landing' %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item nav-link">
              <%= link_to "Выйти", destroy_user_session_path, method: :delete, class: 'nav-landing' %>
            </li>
          <% end %>
        </ul>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
